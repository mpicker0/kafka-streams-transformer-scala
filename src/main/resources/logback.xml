<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d] %p [%t] %m (%c)%n</pattern>
        </encoder>
    </appender>
    <logger name="org.apache.kafka.streams.processor.internals.StreamThread" additivity="false" level="WARN">
        <appender-ref ref="stdout"/>
    </logger>
    <logger name="io.confluent.examples.streams.microservices" additivity="false" level="INFO">
        <appender-ref ref="stdout"/>
    </logger>
    <root level="WARN">
        <appender-ref ref="stdout"/>
    </root>
</configuration>